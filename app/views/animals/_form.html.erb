<%= form_for(@animal) do |f| %>
  <% if @animal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@animal.errors.count, "error") %> prohibited this fu from being saved:</h2>

      <ul>
      <% @animal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-field">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-field">
      <%= f.label :race %><br>
      <%= f.select :race, Animal.races.map {|r| [r.humanize, r.camelcase]}, {}, disabled: @race != "Animal", class: 'form-control' %> 

      <% if @race != "Animal" %>
        <%= f.hidden_field :race, value: @race %>
      <% end %>
  </div>

  <div class="form-field">
    <%= f.label :age %><br>
    <%= f.text_field :age, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= button_tag(type: 'submit', class: 'btn btn-success') do %>
        Submit
    <% end %>

    
  </div>
<% end %>